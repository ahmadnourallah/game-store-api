generator client {
    provider = "prisma-client-js"
    output   = "./src/db"
}

datasource db {
    provider = "postgresql"
    url      = env("DB_URL")
}

model User {
    id       Int    @id @default(autoincrement())
    name     String
    email    String @unique
    password String
    cart     Game[]
    role     Role   @default(VISITOR)
}

model Game {
    id          Int         @id @default(autoincrement())
    images      String[]
    title       String      @unique
    description String
    price       Float
    createdAt   DateTime    @default(now())
    updatedAt   DateTime    @updatedAt
    purchasers  User[]
    genres      Genre[]
    platforms   Platform[]
    publishers  Publisher[]
}

model Platform {
    id        Int      @id @default(autoincrement())
    name      String   @unique
    createdAt DateTime @default(now())
    games     Game[]
}

model Genre {
    id        Int      @id @default(autoincrement())
    name      String   @unique
    createdAt DateTime @default(now())
    games     Game[]
}

model Publisher {
    id        Int      @id @default(autoincrement())
    name      String   @unique
    createdAt DateTime @default(now())
    games     Game[]
}

enum Role {
    ADMIN
    VISITOR
}
