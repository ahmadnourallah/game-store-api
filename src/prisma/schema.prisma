generator client {
    provider = "prisma-client-js"
    output   = "./src/db"
}

datasource db {
    provider = "postgresql"
    url      = env("DB_URL")
}

model User {
    id       Int    @id @default(autoincrement())
    name     String
    email    String @unique
    password String
    cart     Cart?
    role     Role   @default(VISITOR)
}

model Game {
    id          Int         @id @default(autoincrement())
    title       String      @unique
    images      String[]
    description String
    price       Float
    createdAt   DateTime    @default(now())
    updatedAt   DateTime    @updatedAt
    cartItems   CartItem[]
    genres      Genre[]
    platforms   Platform[]
    publishers  Publisher[]
}

model Cart {
    id        Int        @id @default(autoincrement())
    user      User       @relation(fields: [userId], references: [id])
    userId    Int        @unique
    cartItems CartItem[]
    createdAt DateTime   @default(now())
    updatedAt DateTime   @updatedAt
}

model CartItem {
    id       Int   @id @default(autoincrement())
    cart     Cart  @relation(fields: [cartId], references: [id])
    cartId   Int
    game     Game  @relation(fields: [gameId], references: [id])
    gameId   Int
    quantity Int   @default(1)
    price    Float
}

model Platform {
    id        Int      @id @default(autoincrement())
    name      String   @unique
    createdAt DateTime @default(now())
    games     Game[]
}

model Genre {
    id        Int      @id @default(autoincrement())
    name      String   @unique
    createdAt DateTime @default(now())
    games     Game[]
}

model Publisher {
    id        Int      @id @default(autoincrement())
    name      String   @unique
    createdAt DateTime @default(now())
    games     Game[]
}

enum Role {
    ADMIN
    VISITOR
}
